<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="800" Background="#FFB9A9A9">
    <Grid Margin="0,0,-8,-4">
        <Button x:Name="CreateButton" Content="Create" HorizontalAlignment="Left" Margin="565,78,0,167" Width="105" Click="Button_Click"/>
        <WrapPanel x:Name="map" HorizontalAlignment="Left" Height="200" Margin="0,0,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="button1" HorizontalAlignment="Left" Margin="625,160,0,0" VerticalAlignment="Top" Width="75">
            <Button x:Name="StartButton" Content="Start" Width="75" Click="StartButton_Click"/>
        </Button>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="585,50,0,0" VerticalAlignment="Top" Width="75" Click="ClearButton_Click"/>

    </Grid>
</Window>
