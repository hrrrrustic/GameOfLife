<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" Background="#FFB9A9A9">
    <Grid>
        <WrapPanel x:Name="map" HorizontalAlignment="Left" Height="200" Margin="10" VerticalAlignment="Top" Width="200" />
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="250,100,0,0" VerticalAlignment="Top" Width="100"
                Click="SaveButton_Click" />
        <Button x:Name="Create" Content="Create" HorizontalAlignment="Left" Margin="250,20,0,0" VerticalAlignment="Top" Width="100"
                Click="CreateButton_Click" />
        <Button x:Name="Start" HorizontalAlignment="Left" Margin="250,60,0,0" VerticalAlignment="Top" Width="100" Content="Start"
                Click="StartButton_Click" />
        <TextBox x:Name="Counter" HorizontalAlignment="Left" Height="23" Margin="250,147,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>